<h3>Listings</h3>
Sort
  {{radio-button value="date" groupValue=sortBy}} Date
  {{radio-button value="title" groupValue=sortBy}} Title

<ul>
  {{#each sortedListings as |listing|}}
  <li>
    {{#link-to 'listing' listing.id}}<img src={{listing.image}} class="icon" /><br>{{listing.date}}<h4>{{listing.title}}</h4>{{/link-to}}
  </li>
  {{/each}}
</ul>
