<h3>Listings</h3>
<div class="sort-listing">
  Sort
  {{radio-button value="date" groupValue=sortBy}} Date
  {{radio-button value="title" groupValue=sortBy}} Title
</div>

  {{#each sortedListings as |listing|}}
  <div class="row">
    <div class="col-md-3">
      <img src={{listing.image}} class="icon" />
    </div>
      <div class="col-md-6">
    {{#link-to 'listing' listing.id}}
      <h4>{{listing.title}}</h4>
    {{/link-to}}
      <p>{{listing.date}}  {{listing.price}}</p>
        </div>
        <div class="col-md-3">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </div>
  </div>
  {{/each}}
