<div class="single-listing">
  <div class="category-listing">
    <div class="row">
      <div class="col-md-6">
        <h2>{{#link-to 'index'}}Categories{{/link-to}} /  {{listing.category.name}} / Listing</h2>
      </div>
      <div class="col-md-2 col-md-offset-4">
        <div class="new-listing-button">
          {{new-listing saveListing="saveListing" category=model}}
        </div>
      </div>
    </div>
    <hr>
  </div>
<h1>{{listing.title}} - ${{listing.price}}</h1>
  {{listing.date}}    {{listing.email}}
  <br>
  <img src={{listing.image}}>
  <br>
  {{listing.description}}
  {{listing.location}}

</div>
